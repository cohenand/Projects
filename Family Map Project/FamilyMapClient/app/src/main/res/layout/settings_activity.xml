<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        tools:context=".Activities.SettingsActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="@string/lifeStoryLines"
                    android:textSize="17dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/showLifeStory"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <Switch
                android:id="@+id/lifeStorySwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:checked="true"
                >

            </Switch>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="@string/familyTreeLines"
                    android:textSize="17dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/showFamilyTree"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <Switch
                android:id="@+id/familyTreeSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:checked="true"
                >

            </Switch>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="@string/spouseLines"
                    android:textSize="17dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/showSpouse"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <Switch
                android:id="@+id/spouseSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:checked="true"
                >

            </Switch>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="@string/fathersSide"
                    android:textSize="17dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/filterFathers"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <Switch
                android:id="@+id/fathersSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:checked="true"
                >

            </Switch>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="@string/mothersSide"
                    android:textSize="17dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/filterMothers"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <Switch
                android:id="@+id/mothersSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:checked="true"
                >

            </Switch>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="@string/maleEvents"
                    android:textSize="17dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/filterGender"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <Switch
                android:id="@+id/maleEventsSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:checked="true"
                >

            </Switch>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="@string/femaleEvents"
                    android:textSize="17dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/filterGender"
                    android:textSize="12dp"
                    />
            </LinearLayout>
            <Switch
                android:id="@+id/femaleEventsSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:checked="true"
                >

            </Switch>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:id="@+id/logout"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="@string/logout"
                    android:textSize="17dp"
                    android:clickable="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/returnLogin"
                    android:textSize="12dp"
                    />
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</ScrollView>